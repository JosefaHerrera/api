<?xml version='1.0' encoding='utf-8'?>
<widget id="com.VerSaldoBip.ymicro" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bip! y Micro</name>
    <description>
        Aplicación creada para ver saldo Bip! y Micro. Desarollada por emprendedoresweb.cl
    </description>
    <author email="contacto@emprendedoresweb.cl" href="http://emprendedoresweb.cl">
        Josefa Herrera y Javier Rodríguez - Emprendedores Web.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="res/icon.png" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
